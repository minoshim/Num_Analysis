#ifndef _CNST_HPP_
#define _CNST_HPP_

#define XOFF (2)		// Number of ghost grid in X boundary (def. = 2)
#define VOFF (2)		// Number of ghost grid in V boundary (def. = 2)
#define XMESH (64)		// Number of grids in X domain
#define VMESH (64)		// Number of grids in V domain
#define CFL (0.2)		// CFL number
#define NREC (10)		// Number of steps per output
#define NMAX (1280)		// Number of iterations

#endif
